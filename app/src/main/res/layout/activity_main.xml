<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="nls.com.mnls.MainActivity">
    <com.jetradar.desertplaceholder.DesertPlaceholder
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dp_buttonText=""
        app:dp_message=""/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:hint="输入文本"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/input"
        app:layout_constraintVertical_bias="0.43"
        android:background="@drawable/btbg"
        android:textSize="13sp"
        android:padding="10dp"
        android:textColorHint="#b1afaf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="翻译结果："
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:padding="6dp"
        android:textIsSelectable="true"
        android:background="@drawable/btbg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:id="@+id/result"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_height="80dp"
        android:padding="6dp"
        android:background="@drawable/btbg"
        android:text="识别结果："
        android:textIsSelectable="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:id="@+id/tresult"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:background="@drawable/bt_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="翻译"
        />
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="实时语音识别"
        android:id="@+id/instatutoggle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"
        android:background="@drawable/bt_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.81"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="已关闭"
        android:id="@+id/instatu"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="汉译英"
        android:id="@+id/toggle"
        android:background="@drawable/bt_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        />
</android.support.constraint.ConstraintLayout>
